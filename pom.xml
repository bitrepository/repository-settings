<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.sbforge</groupId>
    <artifactId>sbforge-parent</artifactId>
    <version>8</version>
  </parent>

  <groupId>org.bitrepository</groupId>
  <artifactId>bitrepository-collection-settings</artifactId>
  <version>0.2.1</version>
  <name>Bitrepository collection settings</name>
  <description>Contains the standard settings used to define a Bit Repository Collection</description>

  <dependencies>
    <dependency>
      <groupId>org.bitrepository</groupId>
      <artifactId>bitrepository-message-xml</artifactId>
      <version>0.3.2</version>
    </dependency>
  </dependencies>

  <scm>
    <connection>scm:svn:https://sbforge.org/svn/bitrepository/bitrepository-collection-settings/tags/bitrepository-collection-settings-0.2.1</connection>
    <developerConnection>scm:svn:https://sbforge.org/svn/bitrepository/bitrepository-collection-settings/tags/bitrepository-collection-settings-0.2.1</developerConnection>
    <url>https://sbforge.org/fisheye/browse/Bitmagasinet/bitrepository-collection-settings/tags/bitrepository-collection-settings-0.2.1</url>
  </scm>

  <distributionManagement>
    <site>
      <id>sbforge-nexus</id>
      <url>dav:https://sbforge.org/maven/bitrepository/sites/collection-settings/${project.version}</url>
    </site>
  </distributionManagement>

  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <excludes>
          <exclude>xsd/BitRepositoryElements.xsd</exclude>
        </excludes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-remote-resources-plugin</artifactId>
        <version>1.2.1</version>
        <configuration>
          <includes>
            <include>xsd/*.xsd</include>
          </includes>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>bundle</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>